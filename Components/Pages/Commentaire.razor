<EditForm Model="@demoRequest" OnValidSubmit="@HandleValidSubmit" class="w-full">
  <div class="bg-white rounded-lg shadow-md mt-6 md:mt-0 flex flex-col md:flex-row items-center">

    <!-- Left Column (Form Inputs) -->
    <div class="w-full md:w-1/2 p-6">
      <h2 class="text-2xl font-bold mb-4">Request your <strong>Free Demo</strong></h2>

      <div class="mb-4">
        <div id="errorDiv" class="errorDiv text-red-500 mb-4" style="display: none;">Fields in red are in error.</div>
        <div class="mb-4">
          <label for="first_name" class="block text-sm font-bold mb-2">Nom de l'entreprise</label>
          <InputText id="first_name" @bind-Value="demoRequest.FirstName"
            class="input-field w-full px-4 py-2 border rounded-md" />
        </div>
        <div class="mb-4">
          <label for="last_name" class="block text-sm font-bold mb-2">Email</label>
          <InputText id="last_name" @bind-Value="demoRequest.LastName"
            class="input-field w-full px-4 py-2 border rounded-md" />
        </div>
        <div class="mb-4">
          <label for="phone" class="block text-sm font-bold mb-2">Phone</label>
          <InputText id="phone" @bind-Value="demoRequest.PhoneNumber"
            class="input-field w-full px-4 py-2 border rounded-md" />
        </div>
        <div class="mb-4">
          <label for="email" class="block text-sm font-bold mb-2">Que vous souhaitez</label>
          <InputText id="email" @bind-Value="demoRequest.DesiredRequest"
            class="input-field w-full px-4 py-2 border rounded-md" />
        </div>
        <div class="mb-4">
          <label class="keepMe flex items-center">
            <InputCheckbox @bind-Value="demoRequest.KeepMeUpdated" />
            <span class="ml-2">Keep me updated on Procurement news</span>
          </label>
        </div>
      </div>

      <div class="mb-4">
        <label for="message" class="block text-sm font-bold mb-2">Commentaire</label>
        <textarea id="message" @bind="demoRequest.Comment"
          class="form-textarea w-full px-3 py-2 border rounded-md resize-none" rows="4"
          placeholder="Write your thoughts here..."></textarea>
      </div>

      <div>
        <button type="submit" class="orangeButton px-6 py-3 text-white rounded-md flex items-center justify-center">
          GET DEMO <span class="icons whiteArrowRight ml-2"></span>
        </button>
      </div>
    </div>

    <!-- Right Column (Image) -->
    <div class="w-full md:w-1/2 p-6 md:pl-12">
      <img src="/QUESTION.jpeg" alt="Image" class="w-full h-auto rounded-lg shadow-md">
    </div>

  </div>
</EditForm>



@code {
  // Modèle de données pour le formulaire
  private DemoRequestModel demoRequest = new DemoRequestModel();

  // Gérer la soumission valide du formulaire
  private void HandleValidSubmit()
  {
    // Manipuler les données après la soumission valide du formulaire
    // Par exemple, envoyer les données à un service ou effectuer une action appropriée
    // Vous pouvez également réinitialiser le formulaire ici si nécessaire
  }

  // Modèle de données pour le formulaire
  public class DemoRequestModel
  {
    public string FirstName { get; set; }
    public string LastName { get; set; }
    public string PhoneNumber { get; set; }
    public string Email { get; set; }
    public string DesiredRequest { get; set; }
    public bool KeepMeUpdated { get; set; }
    public string Comment { get; set; }
  }
}
